{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://austin-rtass.local/rtass-rubric.schema.json",
  "title": "Austin RTASS Rubric Template",
  "description": "Schema for rubric-first scoring templates used by Austin RTASS",
  "type": "object",
  "required": ["id", "name", "description", "version", "createdAt", "sections", "scoring", "llm"],
  "additionalProperties": false,
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "name": { "type": "string", "minLength": 1, "maxLength": 120 },
    "description": { "type": "string", "minLength": 1, "maxLength": 800 },
    "version": { "type": "string", "minLength": 1, "maxLength": 40 },
    "jurisdiction": { "type": "string", "minLength": 1, "maxLength": 80 },
    "tags": {
      "type": "array",
      "items": { "type": "string", "minLength": 1, "maxLength": 60 },
      "uniqueItems": true
    },
    "createdAt": { "type": "string", "format": "date-time" },
    "updatedAt": { "type": "string", "format": "date-time" },
    "sections": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/definitions/section" }
    },
    "scoring": { "$ref": "#/definitions/scoring" },
    "llm": { "$ref": "#/definitions/llm" }
  },
  "definitions": {
    "section": {
      "type": "object",
      "required": ["id", "title", "weight", "criteria"],
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string", "pattern": "^[a-z][a-z0-9-]*$" },
        "title": { "type": "string", "minLength": 1, "maxLength": 120 },
        "description": { "type": "string", "minLength": 1, "maxLength": 1200 },
        "weight": { "type": "number", "minimum": 0, "maximum": 1 },
        "criteria": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/definitions/criterion" }
        }
      }
    },
    "criterion": {
      "type": "object",
      "required": ["id", "title", "description", "required", "type"],
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string", "pattern": "^[a-z][a-z0-9-]*$" },
        "title": { "type": "string", "minLength": 1, "maxLength": 140 },
        "description": { "type": "string", "minLength": 1, "maxLength": 2000 },
        "required": { "type": "boolean" },
        "weight": { "type": "number", "minimum": 0, "maximum": 1 },
        "type": { "type": "string", "enum": ["boolean", "graded", "enum", "timing"] },
        "grading": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "minScore": { "type": "number", "minimum": 0 },
            "maxScore": { "type": "number", "minimum": 0 }
          }
        },
        "enumOptions": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1, "maxLength": 80 },
          "uniqueItems": true
        },
        "timing": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "startEvent": { "type": "string", "minLength": 1, "maxLength": 80 },
            "endEvent": { "type": "string", "minLength": 1, "maxLength": 80 },
            "targetSeconds": { "type": "number", "minimum": 0 },
            "maxSeconds": { "type": "number", "minimum": 0 }
          },
          "required": ["startEvent", "endEvent"]
        },
        "evidenceRules": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "minEvidence": { "type": "integer", "minimum": 0, "maximum": 10 },
            "requireVerbatimQuote": { "type": "boolean" }
          }
        },
        "notes": { "type": "string", "minLength": 1, "maxLength": 2000 }
      }
    },
    "scoring": {
      "type": "object",
      "required": ["method", "thresholds", "requiredNotObservedBehavior"],
      "additionalProperties": false,
      "properties": {
        "method": { "type": "string", "enum": ["weighted_average"] },
        "thresholds": {
          "type": "object",
          "required": ["pass", "needsImprovement"],
          "additionalProperties": false,
          "properties": {
            "pass": { "type": "number", "minimum": 0, "maximum": 1 },
            "needsImprovement": { "type": "number", "minimum": 0, "maximum": 1 }
          }
        },
        "requiredNotObservedBehavior": {
          "type": "string",
          "enum": ["treat_as_missed", "exclude_with_warning"]
        }
      }
    },
    "llm": {
      "type": "object",
      "required": ["concurrency", "maxRetries", "evidenceQuoteMaxChars"],
      "additionalProperties": false,
      "properties": {
        "concurrency": { "type": "integer", "minimum": 1, "maximum": 10 },
        "maxRetries": { "type": "integer", "minimum": 0, "maximum": 5 },
        "evidenceQuoteMaxChars": { "type": "integer", "minimum": 40, "maximum": 600 }
      }
    }
  }
}

